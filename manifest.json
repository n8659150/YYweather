{
	"manifest_version": 2,
	"name": "chrome实时天气",
	"version": "1.0.0.0",
	"description": "基于丫丫天气API的实时天气播报插件",
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"browser_action": {
	"default_icon": {
		"19": "images/icon19.png",
		"38": "images/icon38.png"
	},
	"permissions": [
    "tabs", "http://api.yytianqi.com/weatherhours?*"
  	],
	"default_title": "实时天气",
	"default_popup": "index.html"
	}
}